<%= form_for(@status, html: {class: "form-horizontal" }) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% @status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <strong><%= current_user.full_name %></strong>
      <%= f.hidden_field :user_id, value: current_user.id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-2 col-md-offset-8">
    <%= f.submit class: "btn btn-block btn-info" %>
  </div>
<% end %>
